@if (!Context.IsMobileDevice())
{
    <iframe id="form_target" name="form_target" style="display:none"></iframe>

        <form id="my_form" action="@Url.Action("Upload", "CMS")" target="form_target" method="post" enctype="multipart/form-data" style="width:0;height:0;overflow:hidden">
            <input name="file" type="file" onchange="$('#my_form').submit();this.value='';">
        </form>
    <script src="@Url.Content("~/scripts/tinymce/tinymce.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
tinymce.init({
    selector: "#my_editor",
    theme: "modern",
    relative_urls: false,
    width: 620,
    height: 400,
    plugins: [
        "advlist autolink lists link image charmap print preview hr anchor pagebreak",
        "searchreplace wordcount visualblocks visualchars code fullscreen",
        "insertdatetime media nonbreaking save table contextmenu directionality",
        "emoticons template paste textcolor colorpicker textpattern jsplus_gallery"
    ],
    jsplus_uploader_url: "/CMS/DoksoftUploader",
    toolbar1: "undo redo | bold italic underline | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | styleselect",
    toolbar2: "| responsivefilemanager | link unlink anchor | image media | forecolor backcolor  | print preview | code | jsplus_gallery",
    image_advtab: true,
        image_class_list: [  
        { title: 'Responsive', value: 'img-responsive' },  
         { title: 'None', value: '' }  
     ],  

    templates: [
        {title: 'Test template 1', content: 'Test 1'},
        {title: 'Test template 2', content: 'Test 2'}
    ],
    file_browser_callback: function(field_name, url, type, win) {
    if(type=='image') $('#my_form input').click();
}
});
    </script>
}
