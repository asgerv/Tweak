@using System.Web.Mvc.Html
@using System.Web.Optimization
@using MVCForum.Domain.DomainModel.General
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap/css/bootstrap.css" />
    @*<link href="~/Content/bootstrap/css/Custom-bootstrap.css" rel="stylesheet" />*@
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/Tweak/MainLayout.css" rel="stylesheet" />
    @if (IsSectionDefined("css"))
    {
        @RenderSection("css", false)
    }
</head>
<body>

    <div class="blackbar">
        <ul>
            <li>@Html.ActionLink("Om", "Index", "Home")</li>
            <li>@Html.ActionLink("Team", "Index", "Home")</li>
            <li>@Html.ActionLink("Kontakt", "Index", "Home")</li>
        </ul>
    </div>


<div class="navcustom">
    @* navbar navbar-default navbar-fixed-top *@
    <div class="container-fullwidth">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="@Url.Action("Index", "Home", null)" class="img-responsive" id="logo">
                @*<img src="~/Content/Images/Tweak/tweaklogo_new.png" id="logo" />*@
                TWEAK
            </a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Nyheder", "Index", "Home")</li>
                <li>@Html.ActionLink("Videoer", "Video", "Home")</li>
                <li>@Html.ActionLink("Tests", "Review", "Home")</li>
                <li>@Html.ActionLink("Forum", "Index", "Forum")</li>
            </ul>
            <div class="collapse navbar-collapse" id="mvcforum-nav">
                <ul class="nav navbar-nav navbar-right">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        if (Html.Settings().SuspendRegistration != true)
                        {
                            <li><a href="@Url.Action("Register", "Members")">@Html.LanguageString("Layout.Nav.Register")</a></li>
                        }
                        <li><a href="@Url.Action("LogOn", "Members")">@Html.LanguageString("Layout.Nav.Logon")</a></li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        @Html.Action("SideAdminPanel", "Members", new {isDropDown = true})
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="container-fullwidth body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

@*@Scripts.Render("~/bundles/jquery")*@
<script src="~/Scripts/jquery-3.1.0.min.js"></script>
<script type="text/javascript" src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Scripts/StickyNavTop.js"></script>
@RenderSection("scripts", required: false)
</body>
</html>
