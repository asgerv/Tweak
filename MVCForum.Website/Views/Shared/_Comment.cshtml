@model MVCForum.Website.ViewModels.CommentViewModel

<h3 class="description" id="InReplyToName">Skriv en kommentar</h3>
@using (Html.BeginForm("_Comment", "Article"))
{
    @Html.HiddenFor(Model => Model.InReplyTo, new { id = "InReplyTo" })
    @Html.HiddenFor(Model => Model.ArticleId)
    @Html.HiddenFor(Model => Model.ArticleSlug)




@Html.Partial("~/Views/Shared/customeditors/tinymceeditorForum.cshtml")
@Html.TextAreaFor(Model => Model.CommentBody, new { @class = "form-control mceEditor", id = "my_editor" })
<input type="submit" class="btn btn-success" value="Besvar" />
}