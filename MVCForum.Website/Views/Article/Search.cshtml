
@{
    ViewBag.Title = "Søg artikler";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "searchResult",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "divLoading",

    };
}
@section Header{
    <link href="~/Content/Tweak/Search.min.css" rel="stylesheet" />
}


<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        @using (Ajax.BeginForm("_SearchArticles", options))
        {
            <div>
                @Html.TextBox("keyword", null, new { autocomplete = "off", placeholder = "Søg alle artikler" })
            </div>
        }
        <br />
        <ul id="searchResult">
            @Html.Action("_SearchArticles", new { keyword = "" })
        </ul>
        <div id="divLoading" style="color: red; width: 200px; background-color: yellow; display: none; position: absolute;">
            Søger ....
        </div>
    </div>
    <div class="col-md-4">

    </div>
</div>

@section Footer
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/searchDelay.js"></script>
}
