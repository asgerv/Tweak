
@{
    ViewBag.Title = "Søg artikler";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "searchResult",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "divLoading",
    };
}
@section Header{
    <link href="~/Content/Tweak/Search.min.css" rel="stylesheet" />
}

<section class="team">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                @using (Ajax.BeginForm("_SearchArticles", options))
                {
                    <h6 class="description">@Html.TextBox("keyword", null, new {autocomplete = "off", placeholder = "Søg alle artikler"})</h6>
                }

                <div class="row pt-md">
                    <div id="divLoading" style="color: red; width: 200px; display: none; position: absolute;">
                        <img src="@Url.Content("~/Content/Images/arrow-spinner-blue.gif")" alt="loading"/>
                    </div>
                    <div id="searchResult">
                        @Html.Action("_SearchArticles", new {keyword = ""})
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</section>

@section Footer
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/searchDelay.js"></script>
}
